<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchWidth"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_food"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

    <TextView
        style="@style/MatchWidth"
        android:textSize="@dimen/m16dp"
        android:text="Suggestion List"
        android:textColor="@color/cobalt_black"
        android:layout_marginLeft="@dimen/m20sp"
        android:paddingTop="@dimen/m5dp"
        android:paddingBottom="@dimen/m5dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_marginTop="@dimen/m5dp"
        android:layout_marginBottom="@dimen/m5dp"
        android:layout_height="2dp"
        android:background="@color/black_et">
    </View>

    <android.support.v7.widget.RecyclerView
        style="@style/MatchWidth"
        android:id="@+id/rv_food_list">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>
